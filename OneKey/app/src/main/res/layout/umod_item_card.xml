<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/umod_card_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/house_eg"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/umod_card_image"
                android:layout_alignTop="@+id/umod_card_image"
                android:layout_marginEnd="12dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Puerta Nona"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="@color/text_shadow"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="5.0"/>

            <ToggleButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp" />


        </RelativeLayout>


        <com.ncorti.slidetoact.SlideToActView
            android:id="@+id/example"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:text="Deslize para actuar"
            app:area_margin="6dp"
            app:outer_color="@color/white"
            app:inner_color="@color/colorPrimary"
            app:border_radius="2dp"
            app:text_size="18sp"
            app:slider_height="60dp"
            app:slider_locked="false"/>


    </LinearLayout>

</android.support.v7.widget.CardView>

